<div class="box">
<h1>Editing Book</h1>
<!-- form_for部分 -->

<%= form_for(@book) do |f| %>

  <% if @book.errors.any? %>
  <div class="alert alert-warning">
    <li>error</li>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %><br>
    <%= f.submit 'Update Book' %><br>
    <%= link_to "Show",book_path(@book) %>
    <%= link_to "Back",books_path %>
<% end %>
</div>
