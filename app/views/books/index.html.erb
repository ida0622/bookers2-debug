<div class="container">
<div class="row">
<div class="col-xs-3">
	<div class="flash"><%=   flash[:hoti]  %></div>
<%= render 'users/info', user: @user %>
<%= render "books/new",bookn: @bookn %>
</div>
<div class="col-xs-9">
	<h2>Books</h2>
<table class="table">
<tr>
	<th>Profile image</th>
	<th>Title</th>
	<th>Opinion</th>
</tr>
<% @books.each do |book| %>
<tr>
	<td><%= link_to user_path(book.user_id) do %><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "50x50" %><% end %></td>
	<td><%= link_to book.title,book_path(book) %></td>
	<td><%= book.body %></td>
	</tr>
	<% end %>
</table>
</div>
</div>
</div>
