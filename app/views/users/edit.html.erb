<div class="box">
 <h1 class="form-header-title">User info</h1>
  </div>
    <div class="form-body">
    <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %> 
    <h2><%= @user.errors.count %>件のerrorが発生しました。</h2>
    <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
<% end %>
    <div class="form-group has-icon">
    <h3>Name</h3>
    <%= f.text_field :name, autofocus: true, id:"inputEmail", placeholder:"名前"%>
    <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>
<div class="form-group has-icon">
    <div class="user-edit-image">
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
    </div><br>
    <h4 class="control-label sr-only" for="inputEmail">ProfileImage</h4><br>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div><br>
<p>   </p><br>
<h3>Introduction</h3><br>
<%= f.text_field :introduction, autofocus: true %><br>
<p></p><br>
<%= f.submit "Update User", class:"btn btn-lg btn-base-1 mt-20" %>
<% end %>
</div>