<div class="countainer"></div>
<div class="row">
<div class="col-xs-3">
<%= render 'users/info', user: @user %>
<%= render "books/new",bookn: @bookn %>
</div>
<div class="col-xs-9">
	<h2>Users</h2>
<table class="table">
<thesd>   
   <tr>
	<th>image</th>
	<th>name</th>
   </tr>
</thesd>
<tbody>	
  
	<% @users.each do |user| %>
	<tr>
	<td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle  profile-img", fallback: "no_image.jpg", size: "50x50" %></td>
	<td><%= user.name %></td>
	<td><%= link_to "Show",user_path(user) %></td>
	</tr>

	<% end %>
   
</tbody>
</table>
</div>
</div>
